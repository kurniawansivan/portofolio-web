<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 400" width="800" height="400">
  <!-- Background -->
  <rect width="800" height="400" fill="#f8f9fa" />
  
  <!-- API Gateway Visualization -->
  <g transform="translate(100, 50)">
    <!-- Gateway Header -->
    <rect x="200" y="0" width="200" height="80" rx="10" fill="#5B7B9A" />
    <text x="300" y="45" font-family="Arial" font-size="18" fill="white" text-anchor="middle">API Gateway</text>
    
    <!-- Clients -->
    <g transform="translate(0, 150)">
      <!-- Client 1 -->
      <rect x="0" y="0" width="120" height="60" rx="5" fill="#E0E0E0" stroke="#2C4C6B" stroke-width="2" />
      <text x="60" y="35" font-family="Arial" font-size="14" fill="#2C4C6B" text-anchor="middle">Mobile App</text>
      
      <!-- Client 2 -->
      <rect x="0" y="-80" width="120" height="60" rx="5" fill="#E0E0E0" stroke="#2C4C6B" stroke-width="2" />
      <text x="60" y="-45" font-family="Arial" font-size="14" fill="#2C4C6B" text-anchor="middle">Web Client</text>
      
      <!-- Client 3 -->
      <rect x="0" y="80" width="120" height="60" rx="5" fill="#E0E0E0" stroke="#2C4C6B" stroke-width="2" />
      <text x="60" y="115" font-family="Arial" font-size="14" fill="#2C4C6B" text-anchor="middle">IoT Device</text>
    </g>
    
    <!-- Microservices -->
    <g transform="translate(480, 150)">
      <!-- Service 1 -->
      <rect x="0" y="-80" width="120" height="60" rx="5" fill="#E0E0E0" stroke="#2C4C6B" stroke-width="2" />
      <text x="60" y="-45" font-family="Arial" font-size="14" fill="#2C4C6B" text-anchor="middle">Auth Service</text>
      
      <!-- Service 2 -->
      <rect x="0" y="0" width="120" height="60" rx="5" fill="#E0E0E0" stroke="#2C4C6B" stroke-width="2" />
      <text x="60" y="35" font-family="Arial" font-size="14" fill="#2C4C6B" text-anchor="middle">User Service</text>
      
      <!-- Service 3 -->
      <rect x="0" y="80" width="120" height="60" rx="5" fill="#E0E0E0" stroke="#2C4C6B" stroke-width="2" />
      <text x="60" y="115" font-family="Arial" font-size="14" fill="#2C4C6B" text-anchor="middle">Data Service</text>
    </g>
    
    <!-- Gateway Features -->
    <g transform="translate(240, 100)">
      <rect x="-40" y="-10" width="200" height="30" rx="5" fill="#E0E0E0" />
      <text x="60" y="10" font-family="Arial" font-size="12" fill="#2C4C6B" text-anchor="middle">Authentication</text>

      <rect x="-40" y="30" width="200" height="30" rx="5" fill="#E0E0E0" />
      <text x="60" y="50" font-family="Arial" font-size="12" fill="#2C4C6B" text-anchor="middle">Rate Limiting</text>

      <rect x="-40" y="70" width="200" height="30" rx="5" fill="#E0E0E0" />
      <text x="60" y="90" font-family="Arial" font-size="12" fill="#2C4C6B" text-anchor="middle">Request Routing</text>
      
      <rect x="-40" y="110" width="200" height="30" rx="5" fill="#E0E0E0" />
      <text x="60" y="130" font-family="Arial" font-size="12" fill="#2C4C6B" text-anchor="middle">Load Balancing</text>
    </g>
    
    <!-- Connection Lines -->
    <!-- Client to Gateway -->
    <path d="M120,70 L200,40" stroke="#5B7B9A" stroke-width="2" fill="none" />
    <path d="M120,150 L200,40" stroke="#5B7B9A" stroke-width="2" fill="none" />
    <path d="M120,230 L200,40" stroke="#5B7B9A" stroke-width="2" fill="none" />
    
    <!-- Gateway to Services -->
    <path d="M400,40 L480,70" stroke="#5B7B9A" stroke-width="2" fill="none" />
    <path d="M400,40 L480,150" stroke="#5B7B9A" stroke-width="2" fill="none" />
    <path d="M400,40 L480,230" stroke="#5B7B9A" stroke-width="2" fill="none" />
  </g>
  
  <!-- Decorative elements -->
  <g transform="translate(400, 340)">
    <text x="0" y="0" font-family="Arial" font-size="10" fill="#2C4C6B">Built with Go, Docker, Kubernetes, gRPC</text>
  </g>
</svg>